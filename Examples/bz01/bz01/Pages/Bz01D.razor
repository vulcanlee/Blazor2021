@page "/Bz01D"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount1Async">Click me(一次等待)</button>

<button class="btn btn-primary" @onclick="IncrementCount2Async">Click me(多次等待)</button>

@code {
    private int currentCount = 0;

    private async Task IncrementCount1Async()
    {
        Console.WriteLine($"觸發按鈕事件 IncrementCount1Async");
        currentCount++;
        await Task.Delay(1000);
        currentCount++;
    }

    private async Task IncrementCount2Async()
    {
        Console.WriteLine($"觸發按鈕事件 IncrementCount2Async");
        currentCount++;
        await Task.Delay(1000);
        currentCount++;
        await Task.Delay(1000);
        currentCount++;
        await Task.Delay(1000);
        currentCount++;
    }
    protected override bool ShouldRender()
    {
        Console.WriteLine($"執行 ShouldRender");
        return base.ShouldRender();
    }
}
