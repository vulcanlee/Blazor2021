@page "/Bz04A"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<div>
    <button class="btn btn-primary m-3" @onclick="IncrementCount">Click me</button>
    <button class="btn btn-primary" @onclick="Empty">Empty</button>
</div>
<br />
<Bz04AComponent currentCount="currentCount" />

@code {
    private int currentCount = 0;
    private void IncrementCount()
    {
        Console.WriteLine($"父元件 觸發按鈕事件 IncrementCount");
        currentCount++;
    }
    void Empty()
    {
        Console.WriteLine($"父元件 觸發按鈕事件 Empty");
    }
        protected override bool ShouldRender()
        {
            Console.WriteLine($"父元件 執行 ShouldRender");
            return base.ShouldRender();
        }
}
